
@{
	ViewBag.Title = "Error 500";
	ViewBag.Description = "Error 500";
	Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="@ViewBag.Description">
	<meta name="author" content="">
	<link rel="icon" href="~/images/favicon.ico">

	<title>@ViewBag.Title</title>

	<partial name="_ValidationStylesPartial">

</head>
<body class="hold-transition">
	<section class="h-p100 bg-light">
		<div class="container h-p100">
			<div class="row h-p100 align-items-center justify-content-center">

				<div class="col-12">
					<div class="box main-agileits text-center bg-transparent no-shadow">
						<h1 class="font-size-80 font-weight-800 text-danger"><em>500</em></h1>
						<h2 class="font-size-80 text-dark">Error Interno !</h2>
						<p class="para-wthree mx-auto text-dark">El sistema ha presentado un error inesperado. Favor validar la bitácora del sistema.</p>
						@if (!string.IsNullOrEmpty(@ViewBag.CoreProcessId))
						{
							<p class="para-wthree mx-auto text-dark">ID de seguimiento: @ViewBag.CoreProcessId</p>
						}
						<div class="d-block">
							<a href="@Url.Action("Index", "Home", new { Area = "Home" })" class="btn btn-info mt-10"><i class="fa fa-home"></i> Inicio</a>
							<a href="#" onclick="javascript:history.go(-1)" class="btn btn-info mt-10"><i class="fa fa-arrow-circle-left"></i> Atrás</a>
						</div>
					</div>
				</div>

			</div>
		</div>
	</section>
</body>
</html>
