@using TN.Client.Services.Shared.Interfaces;
@using TN.Client.Services.Shared.Models;
@using TN.Client.Services.Shared.Entities;

@page "/Information"

<div class="row justify-content-center">
    <div class="col-md-4 col-lg-4">
        <div class="row text-center pb-3">
            <h1 class="fw-bold color-primary"><i class="fas fa-search icon-xl"></i></h1>
            <h1 class="display-5 fw-bold color-primary">Información</h1>
        </div>
        <TNNavCard ListNavbarItems="@MenuItems"></TNNavCard>
    </div>
</div>

@code {
    [Inject] protected IMenuService MenuService { get; set; }

    private List<MenuEntity> MenuItems = new List<MenuEntity>();


    protected override async Task OnInitializedAsync()
    {
        var response = await MenuService.GetMenus(1, MenuType.Botton, ServiceMenuKeys.Information);
        MenuItems = response.Menus?.FirstOrDefault()?.SubMenus;
    }
}
